        </div>

    </div>  
    
    <div class="form-group">
        <label>Nombre</label>
        <div>
            <InputText class="form-control" @bind-Value="@facturas.Cliente.NombreCliente" />
            <ValidationMessage For="@(() => facturas.Cliente.NombreCliente)" />
        </div>

    </div>
    <div class="form-group">
        <label>Apellido</label>
